<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('components/meta'); %>
    <title>Login</title>
  </head>
  <body>
    <main class="container mt-5">
      <header id="header">
        <%- include('components/nav')%>
        <h2 class="text-primary">X-Register</h2>
        
      </header>
      <h2 class="text-center">Register</h2>
    <form action="register" method="POST" class="form">
      <input class="text-center form-control text-primary" type="text" name="user" placeholder="User" required /><br>
      <input class="text-center form-control text-primary"type="text" name="name" placeholder="Full Name" required /><br>
      <input class="text-center form-control text-primary"type="text" name="pass" placeholder="Password" required /><br>
      
      <select name="rol" id="rol" class="text-center form-select text-primary">
        <option value="admin">Admin</option>
        <option value="user">User</option>  
      </select>
      <br><br><br>
            <div class="btns_login text-primary text-center">
              <button class="btn text-primary" type="submit">Register</button>
              <a href="/login"class="btn text-secondary">Cancelar</a>
            </div>
            </form>            
          </main>
         
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
            
    <% if(typeof alert != "undefined"){ %>
    <script>
      Swal.fire({
        title: '<%= alertTitle %>',
        text: '<%= alertMessage %>',
        icon: '<%= alertIcon %>',
        showConfirmButton:'<%= showConfirmButton %>',
        timer:'<%= timer %>'
      }).then(()=>{
        window.location='/<%= ruta %>'
      })
      </script>
    <% } %>

  </body>
</html>

